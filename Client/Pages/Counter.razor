@page "/counter"
@inject IJSRuntime JS;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-primary" @onclick="FetchTeamsContext">FetchTeamsContext</button>

<p class="mt-2" style="font-size:1.6em">
   @username
</p>

    @code {
        private int currentCount = 0;

        private void IncrementCount()
        {
            currentCount++;
        }

        private string username = "";

        private async void FetchTeamsContext()
        {
            // Initialize Microsoft Teams SDK
            await JS.InvokeAsync<string>("Teams.init");

            username = await JS.InvokeAsync<string>("Teams.getUsername");

            Console.WriteLine("Hi again!");
        }
    }
